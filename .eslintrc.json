{
  "parserOptions":{
    "ecmaVersion": "latest"
  },
  "env":{
    "es6":true,
    "node":true,
    "jest":true
  },
  "extends":[
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "plugins":[
    "prettier"
  ],
  "rules":{
    "prettier/prettier":"error",
    "import/order":[
      "error",
      {
        "groups":[
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object"
        ],
        "newlines-between":"always-and-inside-groups",
        "alphabetize":{
          "order":"asc",
          "caseInsensitive":true
        }
      }
    ],
    "no-console":[
      "warn",
      {
        "allow":[
          "error",
          "info"
        ]
      }
    ]
  }
}
